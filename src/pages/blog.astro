---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import NewsletterSection from '../components/NewsletterSection.astro';
import ServiceCard from '../components/ServiceCard.astro';

const title = "Blog Taxi Buëch | Actualités et Guide Local des Hautes-Alpes";
const description = "Découvrez le Buëch à travers notre blog : actualités locales, conseils transport, événements régionaux et informations pratiques sur les services de taxi dans les Hautes-Alpes.";

const articles = [
  {
    category: "Transport Médical",
    posts: [
      {
        title: "Guide Complet du Transport Médical dans le Buëch",
        slug: "guide-transport-medical-buech",
        excerpt: "Tout savoir sur le transport médical conventionné dans le Buëch : prise en charge, documents nécessaires, centres médicaux...",
        image: "https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?auto=format&fit=crop&w=600",
        date: "2024-01-15"
      },
      {
        title: "Centre Hospitalier de Gap : Guide d'Accès",
        slug: "centre-medical-gap",
        excerpt: "Comment se rendre au Centre Hospitalier de Gap depuis le Buëch : itinéraires, services et informations pratiques.",
        image: "https://images.unsplash.com/photo-1519494026892-80bbd2d6fd0d?auto=format&fit=crop&w=600",
        date: "2024-01-10"
      }
    ]
  },
  {
    category: "Découverte du Buëch",
    posts: [
      {
        title: "Les Trésors Cachés des Baronnies Provençales",
        slug: "decouvrir-baronnies-provencales",
        excerpt: "Exploration des plus beaux villages perchés et sites naturels des Baronnies Provençales en taxi.",
        image: "https://images.unsplash.com/photo-1506905925346-21bda4d32df4?auto=format&fit=crop&w=600",
        date: "2024-01-05"
      },
      {
        title: "Guide du Massif du Dévoluy",
        slug: "massif-devoluy-guide",
        excerpt: "Découvrez les meilleures randonnées et activités du Dévoluy, accessibles en taxi depuis le Buëch.",
        image: "https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?auto=format&fit=crop&w=600",
        date: "2023-12-28"
      }
    ]
  },
  {
    category: "Événements & Actualités",
    posts: [
      {
        title: "Calendrier des Événements Sportifs 2024",
        slug: "evenements-sportifs-buech",
        excerpt: "Tous les événements sportifs majeurs du Buëch : compétitions d'escalade, trails, courses cyclistes...",
        image: "https://images.unsplash.com/photo-1541534741688-6078c6bfb5c5?auto=format&fit=crop&w=600",
        date: "2024-01-02"
      },
      {
        title: "Les Plus Beaux Lieux de Réception du Buëch",
        slug: "lieux-reception-buech",
        excerpt: "Sélection des meilleures salles et domaines pour vos événements dans le Buëch.",
        image: "https://images.unsplash.com/photo-1519167758481-83f550bb49b3?auto=format&fit=crop&w=600",
        date: "2023-12-20"
      }
    ]
  },
  {
    category: "Guides Pratiques",
    posts: [
      {
        title: "Guide des Liaisons Gares & Aéroports",
        slug: "guide-liaisons-transport",
        excerpt: "Horaires, tarifs et conseils pour vos transferts vers les principales gares et aéroports de la région.",
        image: "https://images.unsplash.com/photo-1530521954074-e64f6810b32d?auto=format&fit=crop&w=600",
        date: "2023-12-15"
      },
      {
        title: "Les Sites d'Escalade d'Orpierre",
        slug: "sites-escalade-orpierre",
        excerpt: "Guide complet des secteurs d'escalade d'Orpierre et services de transport dédiés.",
        image: "https://images.unsplash.com/photo-1522163182402-834f871fd851?auto=format&fit=crop&w=600",
        date: "2023-12-10"
      }
    ]
  }
];
---

<Layout title={title}>
  <main>
    <Hero
      title="Blog Taxi Buëch"
      subtitle="Actualités, conseils et découvertes dans les Hautes-Alpes"
      image="https://images.unsplash.com/photo-1501785888041-af3ef285b470?auto=format&fit=crop&w=2000"
    />

    <section class="featured-posts">
      <div class="section-content">
        <h2>Articles à la Une</h2>
        <div class="featured-grid">
          {articles[0].posts[0] && (
            <article class="featured-main">
              <img src={articles[0].posts[0].image} alt={articles[0].posts[0].title} />
              <div class="featured-content">
                <span class="category">{articles[0].category}</span>
                <h3>{articles[0].posts[0].title}</h3>
                <p>{articles[0].posts[0].excerpt}</p>
                <a href={`/blog/${articles[0].posts[0].slug}`} class="read-more">Lire l'article →</a>
              </div>
            </article>
          )}
          <div class="featured-secondary">
            {articles[1].posts.map(post => (
              <article class="featured-small">
                <img src={post.image} alt={post.title} />
                <div class="featured-content">
                  <span class="category">{articles[1].category}</span>
                  <h3>{post.title}</h3>
                  <a href={`/blog/${post.slug}`} class="read-more">Lire l'article →</a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </div>
    </section>

    {articles.map(category => (
      <section class="category-section">
        <div class="section-content">
          <h2>{category.category}</h2>
          <div class="posts-grid">
            {category.posts.map(post => (
              <article class="post-card">
                <img src={post.image} alt={post.title} />
                <div class="post-content">
                  <span class="date">{new Date(post.date).toLocaleDateString('fr-FR', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}</span>
                  <h3>{post.title}</h3>
                  <p>{post.excerpt}</p>
                  <a href={`/blog/${post.slug}`} class="read-more">Lire l'article →</a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    ))}

    <section class="related-services">
      <div class="section-content">
        <h2>Services Associés</h2>
        <div class="services-grid">
          <a href="/specialites/medical" class="service-card">
            <h3>Transport Médical</h3>
            <p>Service conventionné pour vos rendez-vous médicaux</p>
          </a>
          <a href="/services/touristique" class="service-card">
            <h3>Excursions Touristiques</h3>
            <p>Découvrez le Buëch avec un chauffeur local</p>
          </a>
          <a href="/specialites/liaisons" class="service-card">
            <h3>Liaisons Gares & Aéroports</h3>
            <p>Transferts vers toutes les destinations</p>
          </a>
        </div>
      </div>
    </section>

    <NewsletterSection />
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .hero {
    background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1501785888041-af3ef285b470?auto=format&fit=crop&w=2000');
    background-size: cover;
    background-position: center;
    color: white;
    padding: 6rem 2rem;
    margin: 0 -1rem 4rem -1rem;
    text-align: center;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.5rem;
    opacity: 0.9;
  }

  .section-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 0;
  }

  h2 {
    text-align: center;
    font-size: 2.5rem;
    color: rgb(var(--accent-dark));
    margin-bottom: 2rem;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .featured-main {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    min-height: 500px;
  }

  .featured-main img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .featured-content {
    position: relative;
    padding: 2rem;
    background: linear-gradient(transparent, rgba(0,0,0,0.8));
    color: white;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .featured-secondary {
    display: grid;
    gap: 2rem;
  }

  .featured-small {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    height: 240px;
  }

  .featured-small img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .category {
    background: rgb(var(--accent));
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    display: inline-block;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: rgb(var(--card-bg));
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgb(var(--border-color));
    transition: transform 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-5px);
  }

  .post-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .post-content {
    padding: 2rem;
  }

  .date {
    color: rgb(var(--accent));
    font-size: 0.9rem;
  }

  .post-content h3 {
    margin: 1rem 0;
    color: rgb(var(--accent-dark));
  }

  .read-more {
    display: inline-block;
    margin-top: 1rem;
    color: rgb(var(--accent));
    text-decoration: none;
    font-weight: 500;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .service-card {
    background: rgb(var(--card-bg));
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid rgb(var(--border-color));
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-5px);
  }

  .service-card h3 {
    color: rgb(var(--accent));
    margin-bottom: 1rem;
  }

  .newsletter {
    background: rgb(var(--bg-secondary));
    padding: 4rem 2rem;
    margin: 4rem -1rem -1rem -1rem;
    text-align: center;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 500px;
    margin: 2rem auto 0;
  }

  .newsletter-form input {
    flex: 1;
    padding: 1rem;
    border: 1px solid rgb(var(--border-color));
    border-radius: 8px;
    font-size: 1rem;
  }

  .newsletter-form button {
    background: rgb(var(--accent));
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 8px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .newsletter-form button:hover {
    background: rgb(var(--accent-dark));
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }

    .featured-grid {
      grid-template-columns: 1fr;
    }

    .newsletter-form {
      flex-direction: column;
    }
  }
</style>